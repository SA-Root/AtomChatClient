                        <SymbolIcon Symbol="Globe" />
                        <TextBlock FontSize="16"
                    Margin="8,0,0,0">
                    <Bold>Web Client</Bold>
                        </TextBlock>
                    </StackPanel>
                </HyperlinkButton>

