<Page
    x:Class="ModernChatLite.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModernChatLite"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Grid>
        <StackPanel
        Orientation="Vertical" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                >
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
                <Image 
                   Height="80"
                   Width="80"
                   Stretch="Fill"
                Source="/Assets/StoreLogo.scale-400.png" ></Image>
                <TextBlock FontSize="40"
                   Margin="16,0,0,0"
                       VerticalAlignment="Center">
                <Bold>AtomChat</Bold>
                </TextBlock>
            </StackPanel>
            <TextBlock Visibility="Collapsed"
                FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,16,0,0"
                   Foreground="{StaticResource SystemAccentColor}">
            <Bold>Sign in</Bold>
            </TextBlock>
            <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
                <SymbolIcon Symbol="Contact" />
                <TextBox x:Name="ServerAddressBox"
            Width="{x:Bind InputBoxWidth}"
                     Header="Server Address"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                 Margin="8,8,0,0"
                     PlaceholderText="">

                </TextBox>
            </StackPanel>
            <Button x:Name="ConnectButton" 
                Click="ConnectButton_Click"
                HorizontalAlignment="Center"
                Style="{StaticResource AccentButtonStyle}"
                Width="{x:Bind ButtonWidth}"
                Margin="0,16,0,0">
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Globe" />
                    <TextBlock FontSize="16"
                    Margin="8,0,0,0">
                    <Bold>Connect</Bold>
                    </TextBlock>
                </StackPanel>
            </Button>
            <Grid Visibility="Collapsed">
                <StackPanel Orientation="Horizontal"
                    Margin="0,16,0,0">
                    <SymbolIcon Symbol="Contact" />
                    <TextBox x:Name="UserNameBox"
            Width="{x:Bind InputBoxWidth}"
                     Header="User Name"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                 Margin="8,8,0,0"
                     PlaceholderText="User Name">

                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Permissions" />
                    <PasswordBox x:Name="PwdBox"
                        Width="{x:Bind InputBoxWidth}"
                     Header="Password"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="8,8,0,0"
                     PlaceholderText="Password">
                    </PasswordBox>
                </StackPanel>


                <Button x:Name="LoginButtonX" 
                Click="LoginButtonX_Click"
                HorizontalAlignment="Center"
                Style="{StaticResource AccentButtonStyle}"
                Width="{x:Bind ButtonWidth}"
                Margin="0,16,0,0">
