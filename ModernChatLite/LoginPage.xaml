                        <TextBlock FontSize="16"
                    Margin="8,0,0,0">
                    <Bold>Login</Bold>
                        </TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="RegisterButton" 
                Click="RegisterButton_Click"
                HorizontalAlignment="Center"
                Width="{x:Bind ButtonWidth}"
                Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="AddFriend" />
                        <TextBlock FontSize="16"
                    Margin="8,0,0,0">
                    <Bold>Register</Bold>
                        </TextBlock>
                    </StackPanel>
                </Button>
                <HyperlinkButton x:Name="WebClientButton" 
                Click="WebClientButton_Click"
                HorizontalAlignment="Center"
                Width="{x:Bind ButtonWidth}"
                Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Globe" />
                        <TextBlock FontSize="16"
                    Margin="8,0,0,0">
                    <Bold>Web Client</Bold>
                        </TextBlock>
                    </StackPanel>
                </HyperlinkButton>

                <InfoBar x:Name="LoginErrorInfoBar"
            IsOpen="False"
            Severity="Error"
            Title="Error"
            Message="Wrong User Name or Password!"
                 Margin="0,8,0,0"/>
            </Grid>

        </StackPanel>
        <!--<Border x:Name="AppTitleBar" 
                Height="48"
                VerticalAlignment="Top"
                IsHitTestVisible="True"
                Background="Transparent">
            <TextBlock x:Name="AppTitle" 
                       Text="AtomChat" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       FontSize="12"
                       VerticalAlignment="Top"
                       Margin="16,8,0,0"
                       />
        </Border>-->
    </Grid>

</Page>
